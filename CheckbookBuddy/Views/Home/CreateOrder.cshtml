@model  CheckbookBuddy.Models.OrderModel


@section Styles{
    <link href="~/css/uploadFile.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
}


<div class="container" style="background-color:#FFFFCE;">
    <h1 align="center">
        <font face="Arial, Helvetica, sans-serif">
            Checkbook Buddy Application for<br>
            Balancing Your Checkbook Register
        </font>
    </h1>
    <hr class="style1" />
    <div align="center">
        <font size="4" face="Arial, Helvetica, sans-serif">
            Welcome to the online system that maintains and balances your checkbook
        </font>
